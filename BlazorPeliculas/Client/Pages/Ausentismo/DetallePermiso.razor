@using BlazorPeliculas.Shared.Entidades.Ausentismo
<!-- Contenido del primer div -->
<div>
    <h2 class="text-azul-principal" style="font-size: 23px">
        <strong>Detalle permiso</strong>
    </h2>
</div>

<div class="cuadro-verde-principal">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-6">
                <div class="col-12">
                    <h3 class="text-azul-principal" style="font-size: 18px">Dependencia</h3>
                    @* <RadzenText TagName="TagName.H3">Dependencia</RadzenText> *@
                    <RadzenTextBox @bind-Value="@detallePermisoModel.Dependencia" ReadOnly="true" class="w-100" aria-label="Disabled TextBox" />
                </div>
                <div class="col-12">
                    <h3 class="text-azul-principal" style="font-size: 18px">Motivo</h3>
                    <RadzenTextBox @bind-Value="@detallePermisoModel.Motivo" ReadOnly="true" class="w-100" aria-label="Disabled TextBox" />
                </div>
            </div>

            <div class="col-6">
                <h3 class="text-azul-principal" style="font-size: 18px">Justificación</h3>
                <RadzenTextArea @bind-Value="@detallePermisoModel.Justificacion" ReadOnly="true" class="w-100 h-75" aria-label="Disabled TextBox" Placeholder="" />
            </div>

            <div class="col-6 mt-3">
                <div class="col-12">
                    <h2 class="text-azul-principal" style="font-size: 18px">
                        <strong>Fecha permiso:</strong>
                    </h2>
                </div>
                <div class="col-12">
                    <RadzenLabel class="text-azul-principal" Text="Desde" Component="DatePickerHourFormat" Style="margin-right: 8px; vertical-align: middle;" />
                    <RadzenDatePicker ReadOnly="true" @bind-Value=@detallePermisoModel.FechaDesde ShowTime="true" HourFormat="12" DateFormat="MM/dd/yyyy h:mm tt" MinutesStep="30" Name="DatePickerHourFormat" />
                </div>
                <div class="col-12 mt-2">
                    <RadzenLabel class="text-azul-principal" Text="Hasta" Component="DatePickerHourFormat" Style="margin-right: 12px; vertical-align: middle;" />
                    <RadzenDatePicker ReadOnly="true" @bind-Value=@detallePermisoModel.FechaHasta ShowTime="true" HourFormat="12" DateFormat="MM/dd/yyyy h:mm tt" MinutesStep="30" Name="DatePickerHourFormat" />
                </div>
            </div>

            <div class="col-6 mt-3">
                <div class="col-12">
                    <h2 class="text-azul-principal" style="font-size: 18px">
                        <strong>Aprobado por:</strong>
                    </h2>
                </div>
            </div>

            <div class="col-12 mt-5">
                <div class="d-flex justify-content-end">
                    <RadzenLabel class="text-azul-principal" Text="Descripción de colores:" Component="DatePickerHourFormat" Style="margin-right: 8px; vertical-align: middle;" />

                    <div class="mt-1 me-1" style="height: 15px; width: 20px; background: green; border-radius: 20px;"></div>
                    <RadzenLabel class="text-azul-principal" Text="Aprobado" Component="DatePickerHourFormat" Style="margin-right: 8px; vertical-align: middle;" />

                    <div class="mt-1 me-1" style="height: 15px; width: 20px; background: red; border-radius: 20px;"></div>
                    <RadzenLabel class="text-azul-principal" Text="Rechazado" Component="DatePickerHourFormat" Style="margin-right: 8px; vertical-align: middle;" />

                    <div class="mt-1 me-1" style="height: 15px; width: 20px; background: grey; border-radius: 20px;"></div>
                    <RadzenLabel class="text-azul-principal" Text="Pendiente" Component="DatePickerHourFormat" Style="margin-right: 8px; vertical-align: middle;" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    DateTime? value = DateTime.Now;
    DetallePermisoModel detallePermisoModel;

    protected override void OnInitialized()
    {
        detallePermisoModel = new DetallePermisoModel()
        {
            Id = 1,
            Dependencia = "La mejor dependencia (OTI) presente",
            FechaDesde = DateTime.Now,
            FechaHasta = DateTime.Now.AddHours(2),
            Justificacion = "Genius Prueba de justificación OTI OTI OTI OTI",
            Motivo = "La mejor dependencia (OTI) presente"
        };
    }
}
