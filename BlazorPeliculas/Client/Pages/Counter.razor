@page "/counter"
@inject ServiciosSingleton singleton
@inject ServiciosTransient transient

@* Edita el título de la página *@
<PageTitle>Counter (@currentCount)</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p role="status">Singleton count: @singleton.Valor</p>
<p role="status">Transient count: @transient.Valor</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        singleton.Valor = currentCount;
        transient.Valor = currentCount;
    }
}
